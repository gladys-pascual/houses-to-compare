generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  scores   Score[]
  criteria Criteria?
}

model House {
  id      Int     @id @default(autoincrement())
  address String
  link    String
  Score   Score[]
}

model Score {
  id      Int     @id @default(autoincrement())
  userId  Int?
  houseId Int?
  score   Decimal
  user    User?   @relation(fields: [userId], references: [id])
  house   House?  @relation(fields: [houseId], references: [id])

  @@index([userId])
  @@index([houseId])
}

model Criteria {
  id        Int         @id @default(autoincrement())
  userId    Int?        @unique
  criterion Criterion[]
  user      User?       @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Criterion {
  id         Int       @id @default(autoincrement())
  factor     String
  weight     Decimal
  criteriaId Int?
  criteria   Criteria? @relation(fields: [criteriaId], references: [id])

  @@index([criteriaId])
}

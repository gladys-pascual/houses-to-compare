generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id             Int              @id @default(autoincrement())
  email          String           @unique
  name           String
  criterionScore CriterionScore[]
  criteria       Criteria?
}

model CriterionScore {
  id             Int    @id @default(autoincrement())
  userId         Int
  user           User   @relation(fields: [userId], references: [id])
  criterionId    Int
  criterionScore Int
  house          House  @relation(fields: [houseAddress], references: [address])
  houseAddress   String

  @@index([userId])
  @@index([houseAddress])
}

model House {
  id             Int              @id @default(autoincrement())
  address        String           @unique
  link           String?
  criterionScore CriterionScore[]
}

model Criteria {
  id        Int         @id @default(autoincrement())
  userId    Int         @unique
  criterion Criterion[]
  user      User        @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Criterion {
  id         Int      @id @default(autoincrement())
  factor     String
  weight     Decimal
  criteriaId Int
  criteria   Criteria @relation(fields: [criteriaId], references: [id])

  @@index([criteriaId])
}
